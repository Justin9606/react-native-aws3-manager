{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./lib/types"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
